<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityConfiguracion">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="191dp"
        android:layout_height="156dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/descarga_removebg_preview" />

    <TextView
        android:id="@+id/textoSeleccionaFondo"
        android:layout_width="323dp"
        android:layout_height="75dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/audiowide"
        android:text="Selecciona un color de fondo"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Spinner
        android:id="@+id/spColores"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="192dp"
        android:layout_height="34dp"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoSeleccionaFondo"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnCambiaColor"
        android:layout_width="155dp"
        android:layout_height="79dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="128dp"
        android:backgroundTint="#855FC8"
        android:fontFamily="@font/audiowide"
        android:onClick="onClick"
        android:text="Cambiar color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spColores" />
</androidx.constraintlayout.widget.ConstraintLayout>